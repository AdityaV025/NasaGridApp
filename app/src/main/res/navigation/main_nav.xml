<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_nav"
    app:startDestination="@id/imageGridFragment">
    <fragment
        android:id="@+id/imageGridFragment"
        android:name="com.example.nasagridapp.app.ui.grid.ImageGridFragment"
        android:label="ImageGridFragment">

        <action
            android:id="@+id/action_imageGridFragmentt_to_imageDetailsFragment"
            app:destination="@id/imageDetailsFragment"
            app:enterAnim="@anim/activity_slide_in_right_trans"
            app:exitAnim="@anim/activity_slide_out_left_trans"
            app:popEnterAnim="@anim/activity_slide_in_left_trans"
            app:popExitAnim="@anim/activity_slide_out_right_trans" />

    </fragment>
    <fragment
        android:id="@+id/imageDetailsFragment"
        android:name="com.example.nasagridapp.app.ui.details.ImageDetailsFragment"
        android:label="ImageDetailsFragment" />
</navigation>