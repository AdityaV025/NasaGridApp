<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <ImageView
            android:id="@+id/wallpaper_display"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tool:scaleType="centerCrop"
            android:scaleType="centerCrop"
            tool:src="@mipmap/ic_launcher"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateTint="@color/crimson"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/wallpaper_display"
            app:layout_constraintTop_toTopOf="@+id/wallpaper_display" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>